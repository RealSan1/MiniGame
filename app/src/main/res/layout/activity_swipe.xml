<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4193FC"
    tools:context=".Swipe">

    <FrameLayout
        android:id="@+id/swipebackground"
        android:layout_width="383dp"
        android:layout_height="864dp"
        android:background="@drawable/white_buttonshape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.481">

        <Button
            android:id="@+id/swipeR"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/buttonshape2"
            android:onClick="clickR"
            android:text="Right"
            android:textStyle="bold" />

        <View
            android:id="@+id/swipebar"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_marginBottom="370dp"
            android:background="#4193FC" />

        <TextView
            android:id="@+id/swipesocre"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="1dp"
            android:text="score"
            android:textAlignment="center"
            android:textSize="44dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/swipetime"
            android:layout_width="58dp"
            android:layout_height="31dp"
            android:layout_gravity="end"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp"
            android:text="00:00"
            android:textAlignment="textEnd"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/swipeL"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/buttonshape2"
            android:onClick="clickL"
            android:text="Left"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/swipeImg1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/swipeImg2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="160dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/swipeImg3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="210dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/swipeImg4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="260dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/swipeImg5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/swipeImg6"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="340dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/swipeImg7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="220dp"
            tools:srcCompat="@tools:sample/avatars" />

        <FrameLayout
            android:id="@+id/LeftBack"
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|start"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="200dp"
            android:background="#CCFFFF">

            <TextView
                android:id="@+id/LeftText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#afeeee"
                android:text="좌로"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/RightBack"
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="200dp"
            android:background="#CCFFFF" >

            <TextView
                android:id="@+id/RightText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#afeeee"
                android:text="우로"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/LeftImg"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_gravity="center|start"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="27dp"
            tools:srcCompat="@drawable/duck" />

        <ImageView
            android:id="@+id/Rightimg"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_gravity="center|end"
            android:layout_marginTop="185dp"
            android:layout_marginRight="27dp"
            tools:srcCompat="@drawable/modapi" />

        />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>